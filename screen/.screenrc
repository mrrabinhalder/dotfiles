screen -t bash0
screen -t bash1
screen -t bash2
screen -t bash3
screen -t bash4

# Enables support for the "alternate screen" terminal capability
altscreen on

# Automatically detach the session on SIGHUP
autodetach on

# Select default flow control behaviour
defflow off

# Select default window hardstatus
defhstatus "screen ^E (^Et) | $USER@^EH"

# Set 10000 lines of scrollback
defscrollback 10000

# Select default character encoding
defutf8 on

# Use the hardware status line
hardstatus alwayslastline
hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{G} %m-%d-%Y %D %C:%s %A%{g}]'

# Switch to a specified window
select 0

# Set the default name for new windows
shelltitle "$ | bash"

# Display copyright notice on startup
startup_message off

# Set $TERM for new windows
term xterm-256color

# Tweak termcap and terminfo for best performance
termcapinfo xterm* ti@:te@

# Use visual bell
vbell off
